<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
  <persistence-unit name="togetdog">

    <!-- <class>com.ssafy.togetdog.user.domain.User</class> -->

    <properties>

      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.user" value="ssafy"/>
      <property name="javax.persistence.jdbc.password" value="ssafy"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/ssafy-sns"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>

      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
      <property name="hibernate.use_sql_comments" value="true"/>
      <property name="hibernate.id.new_generator_mappings" value="true"/>
      
      <!-- Entity에 있는 대상 table이 존재하면 지우고 새로 만들어준다. -->
      <!--
      	create : drop + create 
      	create-drop : drop + create + 종료시점에 drop
      	update : 변경분만 반영(운영DB에는 사용하면 당연히 안되겠죠), 지우는 건 안됨
      	validate : 엔티티와 테이블이 정상 매핑되어있는지만 확인, 안되어있으면 error남
      	none : 사용하지 않음
      	
      	create, create-drop, update는 운영장비에 절대 사용하면 안된다.
      -->
      <property name="hibernate.hbm2ddl.auto" value="none"/>

    </properties>
  </persistence-unit>
</persistence>